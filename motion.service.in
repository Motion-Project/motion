[Unit]
Description=Motion - detect movement in live video, and/or record video and stills etc.
Documentation=man:motion(1)
After=local-fs.target network.target

[Service]
EnvironmentFile=-/etc/default/motion
ExecStart=@BIN_PATH@/motion -n
Type=simple
# Keep stderr out of journald by default, because the default motion config
# logs the same messages to journald via syslog
StandardError=null

[Install]
WantedBy=multi-user.target
